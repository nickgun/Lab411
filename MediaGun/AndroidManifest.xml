<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nickgun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <!-- android:screenOrientation="landscape"   che do man hinh ngang -->
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.nickgun.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nickgun.CameraRecorder" >
        </activity>
        <activity
            android:name="com.nickgun.SettingsDialog"
            android:label="Select Encode Options"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.nickgun.AddNote"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.nickgun.ViewVideo"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.nickgun.ShowNote"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />

</manifest>